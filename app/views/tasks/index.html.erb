<div class="container">
  <h1 class="my-4">My tasks</h1>
  <div class="list-group">
    <% @tasks.each do |task| %>
  <div class="list-group-item">
    <div class="d-flex justify-content-between">
      <h5 class="mb-1">
        <% if task.completed %>
          <i class="fas fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </h5>
      <div>
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-sm mr-2' %>
        <%= link_to 'Delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
      </div>
    </div>
  </div>
<% end %>
  </div>
  <%= link_to "Create task", new_task_path, class: 'btn btn-success mt-3' %>
</div>
