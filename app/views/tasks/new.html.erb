<%= form_with model: @task, local: true, html: { class: 'container' } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :details, class: 'form-label' %>
    <%= form.text_area :details, class: 'form-control' %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :completed, class: 'form-check-input' %>
    <%= form.label :completed, class: 'form-check-label' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
